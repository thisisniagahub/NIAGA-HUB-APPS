## 12. Database Schema

### 12.1 Core Tables


sql
-- Orders
CREATE TABLE orders (
    id UUID PRIMARY KEY,
    queue_number VARCHAR(10) UNIQUE,
    status VARCHAR(20) DEFAULT 'pending',
    total_amount DECIMAL(10,2),
    total_items INTEGER,
    payment_method VARCHAR(20),
    payment_status VARCHAR(20) DEFAULT 'pending',
    customer_phone VARCHAR(20),
    customer_tiktok VARCHAR(50),
    customer_name VARCHAR(100),
    created_at TIMESTAMPTZ DEFAULT NOW(),
    prepared_at TIMESTAMPTZ,
    collected_at TIMESTAMPTZ
);

-- Order Items
CREATE TABLE order_items (
    id UUID PRIMARY KEY,
    order_id UUID REFERENCES orders(id),
    product_name VARCHAR(100),
    quantity INTEGER,
    unit_price DECIMAL(10,2),
    subtotal DECIMAL(10,2)
);

-- Lucky Draw Entries
CREATE TABLE lucky_draw_entries (
    id UUID PRIMARY KEY,
    lucky_draw_id VARCHAR(20) UNIQUE,
    order_id UUID REFERENCES orders(id),
    phone VARCHAR(20),
    tiktok_username VARCHAR(50),
    tickets INTEGER DEFAULT 1,
    status VARCHAR(20) DEFAULT 'qualified',
    selfie_url TEXT,
    tiktok_url TEXT,
    verified_at TIMESTAMPTZ,
    event_code VARCHAR(20),
    created_at TIMESTAMPTZ DEFAULT NOW()
);

-- Queue Status (Realtime)
CREATE TABLE queue_status (
    id UUID PRIMARY KEY,
    order_id UUID REFERENCES orders(id),
    queue_number VARCHAR(10),
    status VARCHAR(20),
    estimated_wait INTEGER,
    updated_at TIMESTAMPTZ DEFAULT NOW()
);


### 12.2 Realtime Subscriptions


typescript
// Staff Panel - Subscribe to new orders
supabase
    .channel('orders')
    .on('postgres_changes', {
        event: 'INSERT',
        schema: 'public',
        table: 'orders'
    }, (payload) => {
        // Show new order notification
    })
    .subscribe();

// Customer - Subscribe to their queue status
supabase
    .channel(`queue:${orderId}`)
    .on('postgres_changes', {
        event: 'UPDATE',
        schema: 'public',
        table: 'queue_status',
        filter: `order_id=eq.${orderId}`
    }, (payload) => {
        // Update wait time display
    })
    .subscribe();


